@model WebApplication1.Models.HEPMA.SiteLocation

@{
    ViewBag.Title = "Details";
}

<h2>Site Location Details </h2>

<div class="container">

    <div>
        <h4><strong>@Model.HospitalSite.Name - @Model.Name</strong></h4>

        @Html.ActionLink("Back to List of Hospitals", "../HospitalSites/Index") |
        @Html.ActionLink("Back to List of Site Locations", "../HospitalSites/Details", new { id = Model.HospitalSiteId }) |

        <hr />



        <div class="col-md-3">

            <div class="panel">

                <div class="panel-heading bg-primary">
                    <h5>@ViewBag.HospitalSiteName</h5>
                    <h3>@Html.DisplayFor(model => model.Name)</h3>
                    <h5>Areas of Care: @ViewBag.AreasOfCareCount</h5>

                    <div class="bg-info text-center">

                        <strong>@Html.ActionLink("Edit Site Location", "Edit", new { id = Model.Id })</strong>

                    </div>
                </div>
                <div class="panel-body">
                    <p>
                        Areas of Care: @ViewBag.AreasOfCareCount
                    </p>
                    <p>
                        <strong>Desctiption:</strong>
                    </p>
                    <p>
                        @Html.DisplayFor(model => model.Name)
                    </p>
                    <p>
                        <strong>Notes:</strong>
                    </p>
                    <p>
                        @Html.DisplayFor(model => model.Notes)
                    </p>
                </div>

                <div class="panel-footer">
                    <!-- Trigger the modal notes area -->
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Site Location Notes</button>

                    <!--Link to hospital notes create page -->
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Add Note", "../NotesFieldsSiteLocation/create", new { id = Model.Id })
                </div>
            </div>


        </div>
    </div>

    <div class="col-md-9">

        <table class="table">

            <tr class="bg-primary">
                <td><strong>InScope</strong></td>
                <td><strong>Areas of Care</strong></td>
                <td><strong>Planned go-live</strong></td>
                <td><strong>Agreed</strong></td>
                <td><strong>No longer in scope</strong></td>
                <td>&nbsp</td>
                @*<td>&nbsp</td>*@
            </tr>

            @foreach (var ListOfAoC in ViewBag.AreasOfCare)
            {

                <tr>

                    <td>
                        @if (ListOfAoC.InScope == true)
                        {<p class="bg-success">@ListOfAoC.InScope</p>}
                    </td>

                    <td>
                        @ListOfAoC.AoCName
                    </td>

                    <td>
                        @if (ListOfAoC.AoCPlannedGoLiveDate != null)
                        {@ListOfAoC.AoCPlannedGoLiveDate.ToString("dd/MM/yyyy")}
                    </td>

                    <td>
                        @if (ListOfAoC.AoCPlannedGoLiveDateAgreedAoC == true)
                        {
                            <p class="bg-success">@ListOfAoC.AoCPlannedGoLiveDateAgreedAoC</p>}
                    </td>

                    <td>
                        @if (ListOfAoC.NoLongerInScope == true)
                        {
                            <p class="bg-danger">
                                @*@ListOfAoC.NoLongerInScope*@
                                @ListOfAoC.NoLongerInScopeReason
                            </p>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Details", "../AreasOfCare/Details", new { id = ListOfAoC.AoCId })

                    </td>
                    @*<td>
                        | @Html.ActionLink("Edit", "../AreasOfCare/Edit", new { id = ListOfAoC.AoCId })
                        | @Html.ActionLink("Delete", "../AreasOfCare/Delete", new { id = ListOfAoC.AoCId }) |
                    </td>*@
                </tr>

            }

                <tr class="alert-info">
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    @*<td>&nbsp;</td>*@
                    <td><strong>@Html.ActionLink("Create New AoC", "../AreasOfCare/Create", new { id = Model.Id })</strong></td>
                </tr>
        </table>

    </div>
</div>

<!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- Notes - Modal code -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog ">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Site Location Notes</h4>
            </div>
            <div class="modal-body">

                @foreach (var note in ViewBag.LocationNotes)
                {
                    <div class="panel">
                        <div class="panel-heading bg-info">
                            <p>@note.CreatedBy --- @note.CreatedOn --- @note.NoteType</p>
                        </div>
                        <div class="panel-body">
                            <p>@note.Note</p>
                        </div>
                    </div>

                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<!--///////////////////////////////////////////////////////////////////////////////////////////////////////////-->